{
  "name": "armanckeser-personal",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "NODE_OPTIONS=--enable-source-maps vite dev",
    "build": "vite build",
    "preview": "NODE_OPTIONS=--enable-source-maps vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test": "vitest",
    "lint": "biome check .",
    "format": "prettier --write .",
    "deploy": "bun run build && bunx gh-pages -d build -t true && bun run post-deploy",
    "post-deploy": "echo https://armanckeser.github.io/new/"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.3.1",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.16.1",
    "@sveltejs/vite-plugin-svelte": "^3.1.2",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^22.12.0",
    "autoprefixer": "^10.4.20",
    "gh-pages": "^6.3.0",
    "postcss": "^8.5.1",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "svelte": "^5.19.4",
    "svelte-check": "^3.8.6",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "vite": "^5.4.14",
    "vitest": "^1.6.0"
  },
  "type": "module",
  "dependencies": {
    "@biomejs/biome": "^1.9.4",
    "bits-ui": "^0.21.16",
    "clsx": "^2.1.1",
    "lucide-svelte": "^0.399.0",
    "mdsvex": "^0.12.3",
    "mode-watcher": "^0.3.1",
    "tailwind-merge": "^2.6.0",
    "tailwind-variants": "^0.2.1",
    "zod": "^3.24.1"
  }
}
